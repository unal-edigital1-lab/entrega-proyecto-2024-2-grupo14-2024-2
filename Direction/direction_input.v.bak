module direction_input(
	input clk, left, right, up, down,
	output reg [0:1] direction
);


initial

begin

    direction = 2'b01;
	 
end


always @(posedge clk)

begin

	if(left + right + up + down == 3'b001)

	begin 

		if(left && (direction != 2'b11)) 

		begin 
			direction = 2'b00; 
		end 

		if(right && (direction != 2'b10)) 

		begin 
			direction = 2'b01; 
		end 

		if(up && (direction != 2'b10)) 

		begin 
			direction = 2'b10;
		end 			 

		if(down && (direction != `TOP_DIR)) 

		begin 
			direction = `DOWN_DIR; 
		end 

	end 

end 


endmodule